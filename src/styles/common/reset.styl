html, body
  margin 0
  padding 0
  font-family 'PingFang SC', Verdana, 'Helvetica Neue', 'Microsoft Yahei', 'Hiragino Sans GB', 'Microsoft Sans Serif', 'WenQuanYi Micro Hei', 'Open Sans', sans-serif
  font-weight 300
  width 750px
  height 100%
  -webkit-font-smoothing antialiased
  font-smoothing antialiased
  text-rendering optimizeLegibility

div, dl, dt, dd, ul, ol, li, h1, h2, h3, h4, h5, h6, pre, form, fieldset, input, textarea, blockquote, p
  padding 0
  margin 0

table, td, tr, th
  font-size 10px

a
  text-decoration none
  color #666

a:hover
  text-decoration none
  color #666

ol, ul
  list-style none

li
  list-style-type none

input, select
  border-radius 0
  -webkit-appearance none
  outline none

input:disabled, textarea:disabled
  -webkit-text-fill-color #999

textarea:disabled
  background-color #fff

button
  border-radius 0

img
  border 0
  display inline-block

h1, h2, h3, h4, h5, h6
  font-size inherit
  font-weight normal

address, cite, code, em, strong, th, i
  font-weight normal
  font-style normal

a:focus, button:focus, input:focus
  outline none

input, textarea
  font-family 'PingFang SC', Verdana, 'Helvetica Neue', 'Microsoft Yahei', 'Hiragino Sans GB', 'Microsoft Sans Serif', 'WenQuanYi Micro Hei', 'Open Sans', sans-serif
  font-weight 300

input::-webkit-outer-spin-button, input::-webkit-inner-spin-button
  -webkit-appearance none !important
  margin 0

input[type='number']
  -moz-appearance textfield

/* img[src=""],
img:not([src]) {
    opacity: 0;
