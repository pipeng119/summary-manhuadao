@import '~styles/common/_mixins.styl'

.common-header
    position relative
    display flex
    align-items center
    justify-content center
    width 100%
    background #fff
    height 90px
    padding 0 15px

    &-login
        homeBgIcon(50px, 50px, '~assets/images/login.png')

    &-title
        max-width 70%
        color #333
        font-weight 500
        text-align center
        ellipsis()

    &-bg
        homeBgIcon(186px, 56px, '~assets/images/logo.png')

.common-header-search-light
    position absolute
    top 24px
    right 24px
    homeBgIcon(50px, 50px, '~assets/images/search_light.png')

.common-header-search-dark
    position absolute
    top 24px
    right 24px
    homeBgIcon(42px, 42px, '~assets/images/search_dark.png')