@import '~styles/common/_mixins.styl'

.book-list
    &-item
        position relative
        display flex
        align-items center
        width 100%
        height 250px
        border-top 1px solid #dddddd
        padding 20px

        &-pic
            width 160px
            height 100%
            border-radius 6px
            background-repeat no-repeat
            background-size cover
            background-position top

        &-info
            flex 1
            height 100%
            display flex
            flex-direction column
            align-items flex-start
            justify-content space-between
            max-width 70%
            margin 0 0 0 20px
            color #999

            &-title
                color #333
                font-weight 500
                ellipsis()

        &-sort
            width 99px
            height 56px
            margin auto
            position absolute
            top 0
            right 40px
            bottom 0

        .first
            background url('~assets/images/ranking/sort_01.png')

        .second
            background url('~assets/images/ranking/sort_02.png')

        .third
            background url('~assets/images/ranking/sort_03.png')

        .others
            display flex
            align-items center
            justify-content center
            width 52px
            height 50px
            right 60px
            background url('~assets/images/ranking/sort_04.png')

    &-item:last-child
        border-bottom 1px solid #ddd
