.explore
    &-header
        display flex
        justify-content center
        align-items center
        width 100%
        height 90px
        margin 0 auto
        background #e7370c
        position relative

        &-search
            position relative
            // box-sizing border-box
            display flex
            align-items center
            width 70%
            height 0.8rem
            padding 0 0.26666667rem 0 0.8rem
            border none
            border-radius 6px

            &-icon
                width 28px
                height 28px
                background url('~assets/images/explore/search.png') no-repeat
                background-size contain
                position absolute
                top 16px
                left 20px

            &-input
                box-sizing border-box
                display flex
                align-items center
                width 100%
                height 60px
                padding 0 20px 0 60px
                border none
                border-radius 6px