@import '~styles/common/_mixins.styl'

.history
    &-nav
        display flex
        justify-content center
        align-items center
        width 100%
        height 90px
        margin 0 auto
        border-bottom 1px solid #b2b2b2
        background-color #f9f9f9
        position relative

        &-back
            position absolute
            top 32px
            left 30px
            width 46px
            height 26px
            backBtn()

        &-tabs
            display flex
            align-items center
            justify-content space-between
            width 240px
            height 100%

            &-item
                display flex
                align-items center
                position relative
                height inherit
                color #e7370c
                font-weight 500

    & .active:after
        content ''
        width 80px
        height 9px
        background url('~assets/images/tab-active.png')
        background-size contain
        position absolute
        left -4px
        bottom 0
