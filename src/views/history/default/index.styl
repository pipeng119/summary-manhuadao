@import '~styles/common/_mixins.styl'

.default
    &-item
        position relative
        display flex
        align-items center
        width 100%
        height 250px
        border-top 1px solid #dddddd
        padding 20px

        &-pic
            width 160px
            height 100%
            border-radius 6px
            background-repeat no-repeat
            background-size cover
            background-position top

        &-info
            flex 1
            height 100%
            display flex
            flex-direction column
            align-items flex-start
            justify-content space-between
            max-width 70%
            margin 0 0 0 20px
            color #666
            font-weight 400

            &-title
                color #333
                font-weight 500
                ellipsis()

        &-btn
            display flex
            justify-content center
            align-items center
            width 140px
            height 60px
            border 1px solid #e7370c
            border-radius 6px

            &-icon
                width 24px
                height 30px
                margin 0 12px 0 0
                background url('~assets/images/keep.png')
                background-size contain

            &-text
                color #e7370c

    &-item:last-child
        border-bottom 1px solid #ddd
